    => nrel_main_idtf:
      [Def. (Футурама)] (* <- lang_en;; *);;
    <= nrel_using_constants: ... (*
      -> cinema;;
      -> cartoon;;
      -> animation;;
      -> animator;;
      -> television;;
      -> sitcom;;
